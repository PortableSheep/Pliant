	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"build:core": "npm --prefix packages/pliant-core run build",
		"build:angular": "npm --prefix packages/pliant-angular run build",
		"build": "npm run build:core && npm run build:angular",
		"example:core": "npm run build:core && npm --prefix examples/core run start",
		"example:angular": "npm run build:core && npm run build:angular && npm --prefix examples/angular run start"
	}
}
